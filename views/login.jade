    $('.login').click(function(e){
    e.preventDefault();
    var data = {
    email       : $('#email').val(),
    password    : $('#password').val()
    }
    console.log(data);
    $.ajax({
    type: 'POST',
    url: "/user/login",
    //url: "http://localhost:3000/user/login",
    dataType: 'json',
    data: data,
    success: function(data){
    console.log(data);
    if (data.success) {
    window.location = "/books";
